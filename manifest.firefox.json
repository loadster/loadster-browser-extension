{
  "manifest_version": 2,
  "icons": {
    "16": "icon-16x16.png",
    "32": "icon-32x32.png",
    "48": "icon-48x48.png",
    "128": "icon-128x128.png",
    "256": "icon-256x256.png"
  },
  "browser_action": {
    "default_icon": "icon-32x32.png",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["src/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://localhost/*", "https://loadster.app/*", "https://speedway.app/*"],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "webRequest",
    "webNavigation",
    "*://*/*"
  ]
}
