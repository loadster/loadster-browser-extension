{
  "name": "Loadster Recorder Extension",
  "type": "module",
  "version": "2.0.0",
  "description": "Create test scripts to run in Loadster.",
  "scripts": {
    "dev": "vite dev",
    "dev:firefox": "cross-env TARGET=firefox vite dev",
    "build": "npm run build-chorme & npm run build-firefox",
    "build-chrome": "cross-env TARGET=chrome vite build",
    "build-firefox": "cross-env TARGET=firefox vite build",
    "watch": "vite build --watch --mode development",
    "lint": "eslint . --fix"
  },
  "dependencies": {
    "@eslint/js": "^9.9.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.9.0",
    "globals": "^15.9.0",
    "vite": "^5.4.1",
    "vite-plugin-web-extension": "^4.1.6",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.12.0"
  }
}
